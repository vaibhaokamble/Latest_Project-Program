<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

  <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.example.bookmanagement.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>ViewBooksServlet</servlet-name>
		<servlet-class>com.example.bookmanagement.ViewBooksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewBooksServlet</servlet-name>
		<url-pattern>/viewBooks</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateBookServlet</servlet-name>
		<servlet-class>com.example.bookmanagement.UpdateBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateBookServlet</servlet-name>
		<url-pattern>/updateBook</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteBookServlet</servlet-name>
		<servlet-class>com.example.bookmanagement.DeleteBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteBookServlet</servlet-name>
		<url-pattern>/deleteBook</url-pattern>
	</servlet-mapping>
</web-app>
</element>
